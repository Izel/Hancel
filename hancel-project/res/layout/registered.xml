<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:linphone="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  	android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center">
 
   <LinearLayout
        android:id="@+id/txtWelcome"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:orientation="vertical" 
        android:layout_centerVertical="true">
       
		<TextView
			android:id="@+id/userWelcome"        
			style="@style/registeredTittle"   	        			        		        	        					  		        		
			android:text="Asly: Te damos la bienvenida a Hancel"/>	 
			
		<TextView
			android:id="@+id/userWelcomeTxt"        
			style="@style/registeredTxt"   	        			        		        	        					  		        		
			android:text="@string/registration_info"/>	  
			
   </LinearLayout>
           	
   
	<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_alignRight="@+id/txtWelcome"		
            android:paddingRight="25dp"		
            android:paddingBottom="25dp"				
			android:layout_alignParentBottom="true">	
            	
	    <Button
			style="@style/backButton"	
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"								
			android:text="@string/new_ring"/>

		<Button
			style="@style/button"	
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="10dp"					
			android:text="@string/button_add_contact" />
		
		<TextView
		    style="@style/labelText"			
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"			
			android:paddingTop="15dp"				
			android:text="@string/do_it_later" />
	</LinearLayout>
		
  </RelativeLayout>
